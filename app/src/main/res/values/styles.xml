<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorPrimary">@color/textColorPrimary</item>
        <item name="android:textColorSecondary">@color/textColorPrimary</item>
        <item name="android:textColorTertiary">@color/textColorPrimary</item>
        <item name="android:actionModeBackground">@color/colorPrimary</item>
        <item name="android:windowBackground">@color/appBackgroundColor</item>
        <item name="windowActionModeOverlay">true</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="ToolbarStyle" parent="@style/ThemeOverlay.AppCompat.Light">
        <item name="android:textColorSecondary">@android:color/white</item>
        <item name="android:textColorPrimary">@android:color/white</item>
    </style>

    <style name="PopupMenuStyle">
        <item name="android:textColorSecondary">@color/textColorPrimary</item>
        <item name="android:textColorPrimary">@color/textColorPrimary</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="editedModifiedText" parent="BaseEditedModifiedText">
        <item name="android:layout_alignParentRight">true</item>
    </style>

    <style name="scrollBarStyle">
        <item name="android:scrollbarSize">3dp</item>
        <item name="android:scrollbarStyle">insideOverlay</item>
        <item name="android:scrollbarThumbVertical">@color/colorAccent</item>
        <item name="android:scrollbars">vertical</item>
        <item name="android:fadeScrollbars">false</item>
    </style>

    <style name="recyclerStyle" parent="@style/scrollBarStyle">
        <item name="android:paddingTop">6dp</item>
        <item name="android:paddingBottom">80dp</item>
        <item name="android:clipToPadding">false</item>
        <item name="android:overScrollMode">never</item>
    </style>

    <style name="floatingActionButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:clickable">true</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_margin">16dp</item>
        <item name="backgroundTint">@color/colorPrimary</item>
        <item name="fabSize">normal</item>
    </style>

    <style name="stageEditDate">
        <item name="android:layout_width">200dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:focusable">false</item>
        <item name="android:inputType">date</item>
    </style>

    <style name="customCardView" parent="BaseCustomCardView">
        <item name="android:layout_marginLeft">@dimen/cardViewMarginSides</item>
        <item name="android:layout_marginRight">@dimen/cardViewMarginSides</item>
    </style>

    <style name="headerCardViewLinearLayout" parent="BaseHeaderCardViewLinearLayout">
        <item name="android:layout_marginLeft">30dp</item>
        <item name="android:layout_marginRight">30dp</item>
    </style>

    <style name="rowCardViewRelativeLayout" parent="BaseRowCardViewRelativeLayout">
        <item name="android:layout_marginLeft">24dp</item>
        <item name="android:layout_marginRight">12dp</item>
    </style>

    <style name="cardViewTitles">
        <item name="android:textSize">@dimen/cardViewTextSize</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="rowCardViewTitle" parent="BaseRowCardViewTitle">
        <item name="android:layout_marginRight">50dp</item>
    </style>

    <style name="rowCardViewSmallTitle" parent="BaseRowCardViewSmallTitle">
        <item name="android:layout_marginRight">45dp</item>
    </style>

    <style name="priorityBookmark" parent="BasePriorityBookmark">
        <item name="android:layout_marginLeft">2dp</item>
    </style>

    <style name="statusIcon" parent="BaseStatusIcon">
        <item name="android:layout_alignParentRight">true</item>
    </style>

    <style name="filterTitleStyle">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="spinnerUnderlineStyle">
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">@dimen/filterPanelMarginSpacing</item>
        <item name="android:background">@color/colorAccent</item>
    </style>

    <style name="CustomMaterialSpinner"/>

</resources>
