<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.haarismemon.applicationorganiser.StageEditActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="10dp">

        <AutoCompleteTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Stage Name *"
            android:id="@+id/stageNameEditText"
            android:singleLine="true"
            android:inputType="textCapSentences"/>

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:id="@+id/stageEditGridLayout">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Completed?"
                android:layout_row="0"
                android:layout_column="0"
                android:layout_gravity="center_vertical"
                android:inputType="textCapSentences"/>

            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_row="0"
                android:layout_column="1"
                android:layout_marginLeft="@dimen/stageEditInputLeftMargin"
                android:id="@+id/completedRadioGroup">

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Yes"
                    android:id="@+id/yesCompletedRadio"/>

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="No"
                    android:id="@+id/noCompletedRadio"/>

            </RadioGroup>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Waiting?"
                android:layout_row="1"
                android:layout_column="0"
                android:layout_gravity="center_vertical"/>

            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_row="1"
                android:layout_column="1"
                android:layout_marginLeft="@dimen/stageEditInputLeftMargin"
                android:id="@+id/waitingRadioGroup">

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Yes"
                    android:id="@+id/yesWaitingRadio"/>

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="No"
                    android:id="@+id/noWaitingRadio"/>

            </RadioGroup>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Successful?"
                android:layout_row="2"
                android:layout_column="0"
                android:layout_gravity="center_vertical"/>

            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_row="2"
                android:layout_column="1"

                android:layout_marginLeft="@dimen/stageEditInputLeftMargin"
                android:id="@+id/successfulRadioGroup">

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Yes"
                    android:id="@+id/yesSuccessfulRadio"/>

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="No"
                    android:id="@+id/noSuccessfulRadio"/>

            </RadioGroup>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Start Date"
                android:layout_row="3"
                android:layout_column="0"
                android:layout_gravity="center_vertical"/>

            <EditText
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:hint="Pick Start Date"
                android:id="@+id/startDateEditText"
                android:onClick="pickDate"
                android:layout_margin="5dp"
                android:layout_marginLeft="@dimen/stageEditInputLeftMargin"
                android:layout_row="3"
                android:layout_column="1"
                android:focusable="false"
                android:inputType="textCapSentences"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Completion Date"
                android:layout_row="4"
                android:layout_column="0"
                android:layout_gravity="center_vertical"/>

            <EditText
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:hint="Pick Completion Date"
                android:id="@+id/completionDateEditText"
                android:onClick="pickDate"
                android:layout_margin="5dp"
                android:layout_marginLeft="@dimen/stageEditInputLeftMargin"
                android:layout_row="4"
                android:layout_column="1"
                android:focusable="false"
                android:inputType="textCapSentences"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Reply Date"
                android:layout_row="5"
                android:layout_column="0"
                android:layout_gravity="center_vertical"/>

            <EditText
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:hint="Pick Reply Date"
                android:id="@+id/replyDateEditText"
                android:onClick="pickDate"
                android:layout_margin="5dp"
                android:layout_marginLeft="@dimen/stageEditInputLeftMargin"
                android:layout_row="5"
                android:layout_column="1"
                android:focusable="false"
                android:inputType="textCapSentences"/>

        </GridLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp">

            <android.support.design.widget.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Description"
                android:id="@+id/descriptionStageEditText"
                android:height="200dp"
                android:gravity="top"/>

        </android.support.design.widget.TextInputLayout>

    </LinearLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/stageSaveFAB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        app:backgroundTint="@android:color/holo_blue_dark"
        app:fabSize="normal"
        app:srcCompat="@mipmap/ic_save_white_24dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_margin="16dp"
        android:onClick="saveButton"/>

</RelativeLayout>
