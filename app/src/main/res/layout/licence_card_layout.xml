<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/customCardView"
    android:foreground="?android:attr/selectableItemBackground">

    <RelativeLayout
        style="@style/rowCardViewRelativeLayout">

        <TextView
            android:id="@+id/libraryName"
            android:text="@string/library_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="5dp"
            android:layout_marginEnd="50dp"
            android:textSize="20sp"
            android:maxLines="1"/>

        <TextView
            android:id="@+id/licenceName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/libraryName"
            android:layout_alignParentEnd="true"
            android:text="Licence Name"
            android:textSize="14sp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/black"
            android:layout_below="@id/libraryName"
            android:alpha="0.3"
            android:id="@+id/licenceSeparator"/>

        <TextView
            android:id="@+id/libraryLink"
            android:text="Library Link"
            android:textSize="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/licenceSeparator"
            android:layout_alignParentStart="true"
            android:layout_marginTop="5dp"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>