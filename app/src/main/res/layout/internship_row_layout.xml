<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="70dp"
    style="@style/customCardView">

    <ImageView
        android:id="@+id/priorityImage"
        style="@style/priorityBookmark"
        android:contentDescription="@string/image_shows_if_the_internship_is_of_priority_or_is_a_favourite"/>

    <RelativeLayout
        style="@style/rowCardViewRelativeLayout">

        <TextView
            android:id="@+id/companyNameCardView"
            android:text="@string/company"
            style="@style/rowCardViewTitle"/>

        <TextView
            android:id="@+id/roleCardView"
            android:text="@string/role"
            style="@style/rowCardViewSmallTitle"/>

        <TextView
            android:id="@+id/updatedDateCardView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:text="@string/date"/>

        <ImageView
            android:id="@+id/internshipStatusIcon"
            android:layout_below="@id/updatedDateCardView"
            style="@style/statusIcon"
            android:contentDescription="@string/image_shows_the_current_status_of_the_internship"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>