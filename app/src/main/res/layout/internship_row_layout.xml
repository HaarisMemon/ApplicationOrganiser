<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    app:cardElevation="3dp"
    app:cardCornerRadius="5dp"
    android:layout_marginTop="4dp"
    android:layout_marginBottom="4dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    app:cardBackgroundColor="@color/internshipCardBackgroundDefault">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_priority"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="-7dp"
        android:tint="#e00000"
        android:visibility="visible"
        android:id="@+id/priorityImage" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="13dp"
        android:layout_marginBottom="13dp">

        <TextView
            android:id="@+id/companyNameCardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_marginBottom="3dp"
            android:layout_marginRight="50dp"
            android:maxLines="1"
            android:text="Company Name"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/roleCardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginRight="45dp"
            android:maxLines="1"
            android:text="Software Engineering Role"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/updatedDateCardView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:text="19 Jun" />

        <ImageView
            android:id="@+id/internshipStatusIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/updatedDateCardView"
            app:srcCompat="@drawable/ic_status"
            android:tint="@android:color/black"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>